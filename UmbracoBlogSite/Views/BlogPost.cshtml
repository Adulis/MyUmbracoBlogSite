@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@using UmbracoBlogSite.Models

@{
    Layout = "WebBase.cshtml";
}

@* the fun starts here *@


<div id="fh5co-about-section">
    <div class="container about-inner">
        @{Html.RenderAction("RenderTitleControls", "SiteLayout"); }
        @CurrentPage.GetGridHtml("contentGrid", "bootstrap3")
    </div>
</div>


@section meta
{
    <!-- Facebook and Twitter integration -->
    <meta property="og:type" content="website">
    <meta property="og:title" content=@Model.Content.GetPropertyValue("title") />
    <meta property="og:image" content=@Umbraco.Media(@Model.Content.GetPropertyValue("articleImage"))/>
    
    <meta property="og:url" content="www.adulis.se" />
    <meta property="og:site_name" content="Adulis.se" />
    <meta property="og:description" content=@Model.Content.GetPropertyValue("articleIntroduction") />

    <meta name="twitter:title" content=@Model.Content.GetPropertyValue("title") />
    <meta name="twitter:image" content=@Umbraco.Media(@Model.Content.GetPropertyValue("articleImage")) />
    <meta name="twitter:url" content="www.adulis.se" />
    <meta name="twitter:card" content="" />
}