            <div class="col-md-12">
                <div class="form-group">
                    @*<textarea name="" class="form-control" id="" cols="30" rows="7" placeholder="Message"></textarea>*@
                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = "Message", rows = 7, width = "40%" })

                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean)
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @*<input value="Send Message" class="btn btn-primary" type="submit">*@
                    <button class="btn btn-primary btn-outline">Submit</button>
                </div>

            </div>
        </div>
    </div>
